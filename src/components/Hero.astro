---
import { Image } from 'astro:assets';
import appPreviewLeft from '../../images/app-preview-left.png';
import appPreviewCenter from '../../images/app-preview-center.png';
import appPreviewRight from '../../images/app-preview-right.png';
---

<section class="pt-32 pb-20 bg-gradient-to-b from-primary-50 to-white dark:from-primary-900 dark:to-primary-800">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-600 to-primary-400 bg-clip-text text-transparent">
        Track Every Moment That Matters
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
        Transform your countdown experience with CountdownChrono - the ultimate event tracking app
        that helps you celebrate every moment and achieve your goals with style!
      </p>
      <!-- Download Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="#"
          class="bg-gradient-to-r from-primary-600 to-primary-400 text-white px-8 py-4 rounded-full font-medium hover:opacity-90 transition-opacity flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5C17.88 20.74 17 21.95 15.66 21.97C14.32 22 13.89 21.18 12.37 21.18C10.84 21.18 10.37 21.95 9.09997 22C7.78997 22.05 6.79997 20.68 5.95997 19.47C4.24997 17 2.93997 12.45 4.69997 9.39C5.56997 7.87 7.12997 6.91 8.81997 6.88C10.1 6.86 11.32 7.75 12.11 7.75C12.89 7.75 14.37 6.68 15.92 6.84C16.57 6.87 18.39 7.1 19.56 8.82C19.47 8.88 17.39 10.1 17.41 12.63C17.44 15.65 20.06 16.66 20.09 16.67C20.06 16.74 19.67 18.11 18.71 19.5ZM13 3.5C13.73 2.67 14.94 2.04 15.94 2C16.07 3.17 15.6 4.35 14.9 5.19C14.21 6.04 13.07 6.7 11.95 6.61C11.8 5.46 12.36 4.26 13 3.5Z"/>
          </svg>
          Download on App Store
        </a>
        <a
          href="https://play.google.com/store/apps/details?id=com.countdowntracker.app"
          class="bg-gradient-to-r from-green-500 to-green-400 text-white px-8 py-4 rounded-full font-medium hover:opacity-90 transition-opacity flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.78 12.09L5.26 3.36C4.73 3.06 4.11 3.12 3.63 3.51C3.15 3.89 2.89 4.49 2.89 5.12V18.86C2.89 19.49 3.15 20.09 3.63 20.47C4.11 20.86 4.73 20.91 5.26 20.62L19.78 11.89C20.31 11.59 20.64 11.05 20.64 10.5C20.64 9.95 20.31 9.41 19.78 9.11ZM5.39 18.19V6.81L15.73 12L5.39 18.19ZM18.26 15.57L15.39 13.89L16.37 12L15.39 10.11L18.26 8.43V15.57Z"/>
          </svg>
          Download on Play Store
        </a>
      </div>
      <!-- App Preview Section -->
      <div class="relative mt-20 mb-10">
        <!-- Gradient overlays -->
        <div class="absolute inset-0 bg-gradient-to-t from-white via-transparent to-transparent dark:from-primary-900 pointer-events-none"></div>
        <div class="absolute -inset-x-20 top-0 bg-gradient-to-r from-white via-transparent to-white dark:from-primary-900 dark:to-primary-900 pointer-events-none"></div>
        <div class="flex justify-center items-end gap-4 md:gap-8">
          <!-- Left Screenshot -->
          <div class="w-48 md:w-64 transform -rotate-12 translate-y-4 float">
            <Image src={appPreviewLeft} alt="CountdownChrono App Preview" class="rounded-[32px] shadow-2xl" />
          </div>
          <!-- Center Screenshot -->
          <div class="w-56 md:w-72 z-10 float" style="animation-delay: 0.2s;">
            <Image src={appPreviewCenter} alt="CountdownChrono App Preview" class="rounded-[40px] shadow-2xl" />
          </div>
          <!-- Right Screenshot -->
          <div class="w-48 md:w-64 transform rotate-12 translate-y-4 float" style="animation-delay: 0.4s;">
            <Image src={appPreviewRight} alt="CountdownChrono App Preview" class="rounded-[32px] shadow-2xl" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
