---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Terms and Conditions - CountdownChrono">
  <Navbar />
  <main class="pt-32 pb-20">
    <div class="container mx-auto px-4 max-w-3xl">
      <h1 class="text-4xl font-bold mb-8 text-primary-600">Terms and Conditions</h1>

      <div class="prose prose-lg max-w-none">
        <p class="text-gray-600 mb-6">Last updated: [Current Date]</p>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold mb-4 text-primary-500">1. Agreement to Terms</h2>
          <p class="text-gray-600">
            By downloading and using CountdownChrono, you agree to be bound by these Terms and Conditions. If you disagree with any part of these terms, you may not use our application.
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold mb-4 text-primary-500">2. Use License</h2>
          <p class="text-gray-600">
            Permission is granted to temporarily download one copy of CountdownChrono for personal, non-commercial transitory viewing only.
          </p>
          <p class="text-gray-600 mt-4">
            This is the grant of a license, not a transfer of title, and under this license you may not:
          </p>
          <ul class="list-disc pl-6 mt-4 text-gray-600">
            <li>Modify or copy the materials</li>
            <li>Use the materials for any commercial purpose</li>
            <li>Transfer the materials to another person</li>
            <li>Attempt to decompile or reverse engineer any software contained in CountdownChrono</li>
          </ul>
        </section>

        <!-- Add more sections as needed -->

        <section class="mb-8">
          <h2 class="text-2xl font-semibold mb-4 text-primary-500">3. Contact Us</h2>
          <p class="text-gray-600">
            If you have any questions about these Terms and Conditions, please contact us at:
            [Your Contact Email]
          </p>
        </section>
      </div>
    </div>
  </main>
  <Footer />
</Layout>